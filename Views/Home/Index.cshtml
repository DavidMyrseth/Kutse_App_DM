@{
    ViewBag.Title = "Tere tulemast peole!";
    ViewBag.Greeting = "Tere tulemast";
    ViewBag.Message = "Oleme väga rõõmsad, et kutsusite!";
}

<div class="container mt-5">
    <div class="jumbotron text-center bg-light p-5 shadow-sm rounded">
        <h1 class="display-4">@ViewBag.Greeting, kallis sõber!</h1>
        <p class="lead">Me ootame sind meie eripeole!</p>
    </div>

    <div class="text-center my-4">
        <p class="text-muted">@ViewBag.Message</p>
        <img src="@ViewBag.Image" class="img-fluid rounded shadow-sm" alt="Kutse Cat" style="max-width: 300px;" />
    </div>

    <div class="text-center mt-4">
        @Html.ActionLink("Vastan", "Ankeet", null, new { @class = "btn btn-primary btn-lg px-4" })
    </div>
</div>


